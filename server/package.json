{
  "name": "buywise-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:old": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev": "nodemon src/index.ts",
    "debug": "ls && cat package.json && ls node_modules",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "mocha --require ts-node/register src/tests/**/*.test.ts --timeout 20000",
    "test:chatbot": "mocha --require ts-node/register src/tests/integration/chatbot.test.ts --timeout 20000",
    "test:auth": "mocha --require ts-node/register src/tests/integration/auth.test.ts --timeout 20000",
    "test:product": "mocha --require ts-node/register src/tests/integration/products.test.ts --timeout 20000",
    "test:chat": "mocha --require ts-node/register src/tests/integration/chat.test.ts --timeout 20000",
    "test:profile": "mocha --require ts-node/register src/tests/integration/profile.test.ts --timeout 20000",
    "test:integration": "mocha --require ts-node/register src/tests/integration/*.test.ts --timeout 20000"
  },
  "dependencies": {
    "@azure-rest/ai-inference": "^1.0.0-beta.6",
    "@azure/core-auth": "^1.9.0",
    "@azure/core-sse": "^2.2.0",
    "@langchain/core": "^0.3.61",
    "@langchain/openai": "^0.5.16",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.29",
    "mongoose": "^8.15.1",
    "nodemailer": "^7.0.3",
    "nodemon": "^3.1.10",
    "resend": "^4.6.0",
    "serpapi": "^2.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
