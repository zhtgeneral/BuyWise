    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "@types/supertest": "^6.0.3",
    "chai": "^5.2.0",
    "eslint": "^9",
    "mocha": "^11.7.0",
    "sinon": "^21.0.0",
    "sinon-chai": "^4.0.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
